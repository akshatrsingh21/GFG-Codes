class Solution {
  public:
    int cntSubarrays(vector<int> &arr, int k) {
        unordered_map<int, int> preSum;
        int sum = 0, count = 0;

        for (int i = 0; i < arr.size(); i++) {
            sum += arr[i];

            if (sum == k)
                count++;

            if (preSum.find(sum - k) != preSum.end())
                count += preSum[sum - k];

            preSum[sum]++;
        }

        return count;
    }
};
